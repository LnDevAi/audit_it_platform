# ====== Global ======
NODE_ENV=production
ENABLE_METRICS=true
ENABLE_HSTS=false
REQUEST_LIMIT=10mb
ALLOWED_ORIGINS=http://localhost:3000

# ====== Backend ======
PORT=5000
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRES_IN=24h

# ====== Database (MySQL) ======
DB_HOST=database
DB_PORT=3306
DB_NAME=audit_platform_saas
DB_USER=audit_user
DB_PASSWORD=audit_password
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000
DB_POOL_EVICT=1000

# Docker MySQL envs
MYSQL_ROOT_PASSWORD=audit_root_password
MYSQL_DATABASE=audit_platform_saas
MYSQL_USER=audit_user
MYSQL_PASSWORD=audit_password

# ====== Redis ======
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====== Frontend ======
REACT_APP_API_URL=http://localhost:5000/api
